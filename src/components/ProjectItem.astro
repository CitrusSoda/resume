---
const { title, description, period, details, achievements } = Astro.props;
const highlightText = "text-[#ff7f50]";
---

<div class="flex flex-col my-10">
  <h3 class="xl:text-2xl md:text-lg text-base font-medium">{title}</h3>
  <div class="flex flex-col mt-4">
    <p>{description}</p>
    <p>{period}</p>
  </div>
  <div class="mt-6">
    <p>{details}</p>
  </div>
  <div class="mt-6">
    <ul>
      {
        achievements.map((achievement: string) => (
          <li class="flex items-start">
            <span class={`${highlightText} mr-2`}>â€¢</span>
            <span>{achievement}</span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
<hr />
